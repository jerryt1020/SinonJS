{

  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false
  },
  "include": [
    "TypeScripts/**/*/*.ts",
    "Example/*.ts"
  ],
  "exclude": [
    "node_modules",
    "typings"
  ]
}